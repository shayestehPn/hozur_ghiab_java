<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="@dimen/_73sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/_32sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:background="@drawable/logo_blue"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_43sdp"
        android:background="#FFFFFF"
        android:layout_marginRight="@dimen/_12sdp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_1_item"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="@dimen/_134sdp"
            android:layout_height="@dimen/_36sdp"
            android:id="@+id/user_name_text"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_13sdp"
            android:paddingRight="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/border_7"
            android:fontFamily="@font/iran_sans_regular"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="4"
            />


    </LinearLayout>

</LinearLayout>