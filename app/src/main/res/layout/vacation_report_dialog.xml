<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_280sdp"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_25sdp"
    android:layout_marginTop="@dimen/_25sdp"
    android:orientation="vertical"
    android:background="@drawable/border_10"
    android:layout_gravity="center_vertical|center_horizontal"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_34sdp"
        android:text="اطلاعات مرخصی"
        android:gravity="center"
        android:textSize="@dimen/_20sdp"
        android:textColor="#002793"
        android:fontFamily="@font/iran_sans_regular"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_27sdp"
        android:text="موضوع مرخصی:"
        android:textSize="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_48sdp"
        android:textColor="#000000"
        android:layout_marginTop="@dimen/_14sdp"
        android:fontFamily="@font/iran_sans_regular"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sdp"
        android:layout_marginRight="@dimen/_48sdp"
        android:textColor="#002793"
        android:layout_marginTop="@dimen/_4sdp"
        android:id="@+id/title"
        android:gravity="right|center"
        android:paddingRight="@dimen/_5sdp"
        android:paddingLeft="@dimen/_5sdp"
        android:fontFamily="@font/iran_sans_regular"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_27sdp"
        android:text="ثبت شده در:"
        android:textSize="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_48sdp"
        android:textColor="#000000"
        android:layout_marginTop="@dimen/_9sdp"
        android:fontFamily="@font/iran_sans_regular"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sdp"
        android:layout_marginRight="@dimen/_48sdp"
        android:textColor="#002793"
        android:layout_marginTop="@dimen/_4sdp"
        android:id="@+id/created_at"
        android:gravity="right|center"
        android:paddingRight="@dimen/_5sdp"
        android:paddingLeft="@dimen/_5sdp"
        android:fontFamily="@font/iran_sans_regular"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_27sdp"
        android:text="وضعیت:"
        android:textSize="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_48sdp"
        android:textColor="#000000"
        android:layout_marginTop="@dimen/_9sdp"
        android:fontFamily="@font/iran_sans_regular"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sdp"
        android:layout_marginRight="@dimen/_48sdp"
        android:textColor="#002793"
        android:layout_marginTop="@dimen/_4sdp"
        android:id="@+id/status"
        android:gravity="right|center"
        android:paddingRight="@dimen/_5sdp"
        android:paddingLeft="@dimen/_5sdp"
        android:fontFamily="@font/iran_sans_regular"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_27sdp"
        android:text="توضیحات:"
        android:textSize="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_48sdp"
        android:textColor="#000000"
        android:layout_marginTop="@dimen/_9sdp"
        android:fontFamily="@font/iran_sans_regular"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:textSize="@dimen/_14sdp"
        android:layout_marginRight="@dimen/_48sdp"
        android:layout_marginLeft="@dimen/_48sdp"
        android:textColor="#002793"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/border_5"
        android:paddingRight="@dimen/_5sdp"
        android:id="@+id/description"
        android:gravity="right|center"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingLeft="@dimen/_5sdp"
        android:fontFamily="@font/iran_sans_regular"
        android:scrollbars="vertical"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_27sdp"
        android:text="جزییات:"
        android:textSize="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_48sdp"
        android:textColor="#000000"
        android:layout_marginTop="@dimen/_9sdp"
        android:fontFamily="@font/iran_sans_regular"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:textSize="@dimen/_14sdp"
        android:layout_marginRight="@dimen/_48sdp"
        android:layout_marginLeft="@dimen/_48sdp"
        android:textColor="#002793"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/border_5"
        android:paddingRight="@dimen/_5sdp"
        android:id="@+id/details"
        android:gravity="center|right"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingLeft="@dimen/_5sdp"
        android:fontFamily="@font/iran_sans_regular"
        android:scrollbars="vertical"
        />
    <Button
        android:layout_width="@dimen/_95sdp"
        android:layout_height="@dimen/_34sdp"
        android:text="تمام"
        android:layout_gravity="center"
        android:background="@drawable/border_8"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:id="@+id/ok_button"
        android:layout_marginBottom="@dimen/_18sdp"
        />

</LinearLayout>
