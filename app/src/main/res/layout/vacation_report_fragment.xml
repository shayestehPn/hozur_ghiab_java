<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".view.vacation_report"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="2.5"
                />
            <TextView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="match_parent"
                android:text="گزارش مرخصی ها"
                android:textColor="#241577"
                android:gravity="center"
                android:textSize="@dimen/_19sdp"
                android:fontFamily="@font/iran_sans_regular"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="9dp"
                android:layout_weight="0.8"
                />
            <ImageView
                android:layout_width="@dimen/_54sdp"
                android:layout_height="match_parent"
                android:background="@drawable/hamburger_icon"
                android:id="@+id/hamburger_icon"
                android:layout_marginRight="@dimen/_7sdp"
                />
        </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_39sdp"
            android:layout_marginLeft="@dimen/_75sdp"
            android:layout_marginRight="@dimen/_18sdp"
            >

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@drawable/border_10"
                android:id="@+id/month_spinner"
                android:gravity="center"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ماه"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/black"
                android:gravity="top|left"
                android:paddingLeft="@dimen/_3sdp"
                android:layout_weight="0.8"
                android:fontFamily="@font/iran_sans_regular"
                android:paddingTop="@dimen/_2sdp"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_10"
                android:layout_weight="0.6"
                android:id="@+id/year_spinner"
                android:gravity="center"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="سال"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/black"
                android:gravity="left|top"
                android:paddingTop="@dimen/_2sdp"
                android:paddingLeft="@dimen/_3sdp"
                android:layout_weight="0.8"
                android:fontFamily="@font/iran_sans_regular"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_27sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_22sdp"
            android:id="@+id/reports_text"
            android:background="#FFFFFF"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="10"
                />
            <TextView
                android:layout_width="@dimen/_250sdp"
                android:layout_height="match_parent"
                android:text="لیست مرخصی ها"
                android:textColor="#030014"
                android:gravity="right|center"
                android:textSize="@dimen/_14sdp"
                android:paddingRight="@dimen/_5sdp"
                android:fontFamily="@font/iran_sans_regular"
                />
            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/rectangle"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_3sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_6sdp"
                android:id="@+id/vacation_report_recycle_header"
                >
                <View
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="وضعیت"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#002793"
                    android:fontFamily="@font/iran_sans_regular"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#002793"
                    android:text="نوع مرخصی"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/iran_sans_regular"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#002793"
                    android:text="روز"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/iran_sans_regular"
                    />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vacation_reports_recycle"
                android:overScrollMode="never"
                android:visibility="visible"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:text="موردی برای نمایش وجود ندارد"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:background="@drawable/border_10"
                android:visibility="gone"
                android:id="@+id/default_recycler_item"
                android:layout_marginTop="@dimen/_27sdp"
                android:fontFamily="@font/iran_sans_regular"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/vacation_illus"
            android:layout_marginRight="@dimen/_53sdp"
            android:layout_marginLeft="@dimen/_53sdp"
            android:layout_marginTop="@dimen/_27sdp"
            android:layout_gravity="fill_vertical"
            />
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    </LinearLayout>
